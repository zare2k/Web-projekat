@using WebApplication1.Models;
@{
    IEnumerable<FitnesCentar> fitnesCentri = (IEnumerable<FitnesCentar>)HttpContext.Current.Application["Centri"];
    FitnesCentar fitnesCentar = (FitnesCentar)HttpContext.Current.Application["FitnesCentarMod"];
    Layout = null;
    ViewBag.Title = "RegistrovanjeTrenera";
}

<body>
    @{
        if (ViewBag.Message != "")
        {
            <h2 style="color:red">@ViewBag.Message</h2>
        }
    }
    <h2 style="color:darkkhaki">Registrovanje trenera</h2>
    <div>
        <form action="/Vlasnik/RegistrujTrenera" method="post">
            <table border="1">
                <tr>
                    <td style="color:darkkhaki" align="center">Korisnicko ime: </td>
                    <td><input type="text" name="korisnickoIme" required /></td>
                </tr>
                <tr>
                    <td style="color:darkkhaki" align="center">Lozinka: </td>
                    <td><input type="password" name="lozinka" required /></td>
                </tr>
                <tr>
                    <td style="color:darkkhaki" align="center">Ime: </td>
                    <td><input type="text" name="ime" required /></td>
                </tr>
                <tr>
                    <td style="color:darkkhaki" align="center">Prezime: </td>
                    <td><input type="text" name="prezime" required /></td>
                </tr>
                <tr>
                    <td style="color:darkkhaki" align="center">Pol: </td>
                    <td>
                        <select name="pol" required>
                            <option value="MUSKI">MUSKI</option>
                            <option value="ZENSKI">ZENSKI</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td style="color:darkkhaki" align="center">Email: </td>
                    <td><input type="email" name="email" required /></td>
                </tr>
                <tr>
                    <td style="color:darkkhaki" align="center">Datum rodjenja: </td>
                    <td><input type="date" name="datumRodjenja" required /></td>
                </tr>
                <tr>
                    <td style="color:darkkhaki" align="center">Fitnes centar: </td>
                    <td><input type="text" name="fitnesCentar" value="@fitnesCentar.Naziv" required readonly /></td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><input type="submit" value="Registruj" /></td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><a href="/Vlasnik/PregledCentara"><input type="button" value="Odustani" /></a></td>
                </tr>
            </table>
        </form>
    </div>
</body>